@model Products
@{
    ViewBag.Title = "Details";
}
<style>
    body{
    font-family: 'Roboto Condensed', sans-serif;
    background-color: #f5f5f5
}
.hedding{
    font-size: 20px;
    color:#ab8181`;
}
.main-section{
    position: absolute;
    left:50%;
    right:50%;
    transform: translate(-50%,5%);
}
.left-side-product-box img{
    width: 100%;
}
.left-side-product-box .sub-img img{
    margin-top:5px;
    width:83px;
    height:100px;
}
.right-side-pro-detail span{
    font-size:15px;
}
.right-side-pro-detail p{
    font-size:25px;
    color:#a1a1a1;
}
.right-side-pro-detail .price-pro{
    color:#E45641;
}
.right-side-pro-detail .tag-section{
    font-size:18px;
    color:#5D4C46;
}
.pro-box-section .pro-box img{
    width: 100%;
    height:200px;
}

    
</style>

<h4>Details of product </h4>
<hr />
<div class="container">
    <div class="col-lg-8 border p-3 main-section bg-white" style="display: contents;">

        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <img src="~/Content/@Model.Imageurl" width="250" height="350" />

            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">

                            <p class="m-0 p-0">@Html.DisplayFor(model => model.Name)</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">@Html.DisplayFor(model => model.Cost)</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Product Detail</h5>
                            <span>
                                @Html.DisplayFor(model => model.Descripton)
                            </span><hr class="m-0 pt-2 mt-2">
                        </div>

                        <div class="col-lg-12">
                            <h5>Brand</h5>
                            <span>@Html.DisplayFor(model => model.brand.Name) </span>
                        </div>
                        <div class="col-lg-12">
                            <h5>Category</h5>
                            <span>@Html.DisplayFor(model => model.cat.Name) </span>
                        </div>
                       
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a href="~/cart/orderNow/@Model.Id" class="btn btn-danger w-100">Add To Cart</a>
                                    

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@{
    var AjaxOptionForShowImage = new AjaxOptions
    {
        HttpMethod = "Get",
        OnSuccess = "DetailsImage",
    };
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

    <div class="modal-dialog" role="document">
        @using (Ajax.BeginForm("AjaxBigImage", "Products", AjaxOptionForShowImage))
            {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Product Image</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                   
                    <img src="~/Content/@Model.Imageurl" width="480" height="500" />


                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="submit">Close</button>
                </div>

            </div>
        }
    </div>
</div>
<script>
    function DetailsImage(res) {
        console.log(res);

        $('#exampleModal').modal('hide')

    }
</script>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model }) |
    @Html.ActionLink("Back to List", "Index")
</p>
