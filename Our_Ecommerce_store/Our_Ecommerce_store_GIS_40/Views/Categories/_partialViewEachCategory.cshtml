
@model Products

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<style>
    a {
        text-decoration: none;
        color: black;
    }

    .contain {
        display: flex;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
    }

    .card {
        overflow: hidden;
        position: relative;
        display: -ms-flexbox;
        display: flex;
    }
</style>

<div class="col-sm-6 col-md-4 col-lg-3 mt-4">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <a href="@Url.Action("Details/" + Model.Id, "Products")">
                <img src="~/Content/@Model.Imageurl" class="card-img-top" alt="..." width="200" height="230">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Descripton</p>
                    <a href="#" class="btn btn-primary">@Model.Cost</a>
                </div>
            </a>
        </div>
    </div>
</div>


